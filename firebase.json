{
    "database":{
        "rules":"database.rules.json"
    },
    "firestore":{
        "rules":"firestore.rules",
        "indexes":"firestore.indexes.json"
    },
    "functions":[
        {
            "source":"functions",
            "codebase":"default",
            "ignore":[
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy":[
                "npm --prefix \"$RESOURCE_DIR\" run lint"
            ]
        }
    ],
    "hosting":{
        "public":"public",
        "ignore":[
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers":[
            {
                "source":"**/*.@(css|js)",
                "headers":[
                    {
                        "key":"Cache-Control",
                        "value":"max-age=864000"
                    }
                ]
            },
            {
                "source":"**/*.@(jpg|jpeg|gif|png)",
                "headers":[
                    {
                        "key":"Cache-Control",
                        "value":"max-age=864000"
                    }
                ]
            }
        ],
        "rewrites":[
			{ "source": "/adm/**", "function": "mainAdm" }
        ]
    },
    "storage":{
        "rules":"storage.rules"
    }
}