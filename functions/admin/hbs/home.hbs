<!DOCTYPE html>
<html lang="en" ng-app="adminApp">

{{>partial-head}}

<body class="hold-transition sidebar-mini layout-fixed layout-footer-fixed">

    <div id="percent-center" class="percent-center"></div>

    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <navbar-top-left></navbar-top-left>

            <ul class="navbar-nav ml-auto">

                <li class="nav-item" navbar-search>
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

                <li class="nav-item" navbar-logout></li>

            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="" class="brand-link">
                <span class="brand-text font-weight-light">
                    Premios Fans <small>Admin</small>
                </span>
            </a>

            <i
                id="sidebar-content-wait" 
                class="fas fa-3x fa-sync-alt fa-spin"
                style="color:gray;margin-top:80px;margin-left: calc(50% - 32px);"
            >
            </i>

            <div
                id="sidebar-content"
                class="sidebar"
                style="overflow-y:auto;overflow-x:hidden;display:none;"
            >

                <div class="user-panel mt-3 pb-3 mb-3 d-flex" style="height:50px;"></div>

                <select-empresa></select-empresa>

                <nav class="mt-3">

                    <ul 
                        class="nav nav-pills nav-sidebar flex-column nav-flat nav-legacy"
                        data-widget="treeview"
                        role="menu"
                        data-accordion="true"
                    >

                        {{#each user.userProfile.groups}}

                            <li class="nav-item">

                                <a href="#" class="nav-link">
								    <i class="nav-icon {{icon}}"></i>
                                    {{titulo}}
                                    <i class="right fas fa-angle-left"></i>
							    </a>

    							<ul class="nav nav-treeview">
                                    {{#each options}}
                                        <li class="nav-item">
                                            <a
                                                href="#!{{href}}"
                                                class="nav-link"
                                                data-id="{{id}}"
                                                data-route="{{href}}"
                                                data-icon="{{icon}}"
                                                data-label="{{label}}"
                                            >
                                                <i class="{{icon}}"></i>
                                                <p class="ml-2">{{label}}</p>
                                            </a>
                                        </li>
                                    {{/each}}

                                </ul>

                            </li>

                        {{/each}}

                    </ul>

                </nav>

            </div>
        </aside>

        <div class="content-wrapper" ng-view></div>

        <footer class="main-footer">
            <strong>Premios Fans</strong>
            <div class="float-right d-none d-sm-inline-block">
            </div>
        </footer>

    </div>  

    {{>partial-scripts}}
</body>

</html>